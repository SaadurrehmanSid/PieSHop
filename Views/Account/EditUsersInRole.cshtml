@model List<EditUsersInRoleVM>
@{
    var roleId = ViewBag.roleId;
    ViewData["Title"] = "EditUsersInRole";
}

    <form asp-action="EditUsersInRole" asp-controller="account" asp-route-roleId="@roleId" method="post">
        <div>
            <h2>Add or remove users from this role</h2>
        </div>
        <div >
            @for(var i=0;i<Model.Count(); i++ )
            {
            <div class="form-check mt-1">
                <input type="hidden" asp-for="@Model[i].UserId"/>
                <input type="hidden" asp-for="@Model[i].UserName"/>
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
            </div>
            }
        </div>
        <button type="submit"class="btn btn-outline-primary">Update</button>
        <a class="btn btn-primary"asp-action="EditRole"asp-controller="account" asp-route-Id="@roleId">Cancel</a>
    </form>
